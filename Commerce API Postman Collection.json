				"body": {
					"mode": "raw",
					"raw": ""
				},
				"url": {
					"raw": "https://{{apiDomain}}/v1/shoppers/me/carts/active.json?format=json&productId={{productId}}&testOrder=true&sendMail=true&sendEmail=true",
					"protocol": "https",
					"host": [
						"{{apiDomain}}"
					],
					"path": [
						"v1",
						"shoppers",
						"me",
						"carts",
						"active.json"
					],
					"query": [
						{
							"key": "format",
							"value": "json"
						},
						{
							"key": "productId",
							"value": "{{productId}}"
						},
						{
							"key": "testOrder",
							"value": "true"
						},
						{
							"key": "sendMail",
